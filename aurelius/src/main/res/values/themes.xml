<resources xmlns:tools="http://schemas.android.com/tools">
    <style
        name="Theme.Aurelius"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/aurelius_background</item>
        <item name="colorPrimaryContainer">@color/aurelius_container_primary</item>
        <item name="colorSecondaryContainer">@color/aurelius_container_secondary</item>
        <item name="colorTertiaryContainer">@color/aurelius_container_tertiary</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="27">
            @bool/aurelius_is_system_in_light_theme
        </item>
        <item
            name="android:windowLightStatusBar"
            tools:targetApi="23">
            @bool/aurelius_is_system_in_light_theme
        </item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="textAppearanceBodyLarge">@style/Theme.Aurelius.Text.Body</item>
        <item name="textAppearanceHeadlineSmall">@style/Theme.Aurelius.Text.Headline</item>
        <item name="textAppearanceLabelSmall">@style/Theme.Aurelius.Text.Label</item>
        <item name="textAppearanceTitleLarge">@style/Theme.Aurelius.Text.Title.Large</item>
        <item name="textAppearanceTitleSmall">@style/Theme.Aurelius.Text.Title.Small</item>
    </style>
</resources>